<Window x:Class="ArticleOpenUI.Views.ArticleView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ArticleOpenUI.Views" 
		xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
		xmlns:cal="http://caliburnmicro.com" 
		mc:Ignorable="d"
		Title="Article Opener V1.2.0" 
		Height="480" Width="960" FontSize="14" 
		WindowStartupLocation="CenterScreen">
	<Grid Name="gridMain" FocusManager.FocusedElement="{Binding ElementName=Input}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="6"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="6"/>
		</Grid.RowDefinitions>

		<!--Header-->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="6"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="6"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<!--Row 0-->
			<TextBox Name="Input" Margin="2"
					 Grid.Row="0" Grid.Column="1"
					 cal:Message.Attach="[Event KeyDown] = [Action TextBoxEvent($executionContext)]" />
			<Button x:Name="SearchArticle" Content="Search" Grid.Row="0" Grid.Column="2"
					MinWidth="64" Margin="2" />
			<Button x:Name="ClearQueue" Content="Clear" Grid.Row="0" Grid.Column="3"
					MinWidth="64" Margin="2" />
			<Button x:Name="OpenArticlesInQueue" Content="Open" Grid.Column="4"
					MinWidth="96" MaxWidth="128" HorizontalAlignment="Right"
					Margin="2" />

			<!--Row 1-->
			<Grid Grid.Column="2" Grid.ColumnSpan="3"
				  Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="8"/>
					<ColumnDefinition Width="1*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="2"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="2"/>
				</Grid.RowDefinitions>

				<!-- FILTER BOXES  -->
				
				<!--Row 1-->
				<TextBlock Text="Type:" 
						   Grid.Row="1"/>

				<!--Row 2-->
				<CheckBox IsChecked="{Binding Path=OpenToolsFilter, Mode=TwoWay}" Content="Tools"
						  Grid.Row="2"/>
				
				<!--Row 3-->
				<CheckBox IsChecked="{Binding Path=OpenPlasticsFilter, Mode=TwoWay}" Content="Parts"
						  Grid.Row="3"/>
				
				<!--Column 2-->

				<!--Row 1-->
				<TextBlock Text="Open:" 
						   Grid.Column="2"
						   Grid.Row="1"/>

				<!--Row 2-->
				<CheckBox IsChecked="{Binding Path=OpenFoldersFilter, Mode=TwoWay}" Content="Folders"
						  Grid.Column="2"
						  Grid.Row="2"/>
				
				<!--Row 3-->
				<CheckBox IsChecked="{Binding Path=OpenInfoFilter, Mode=TwoWay}" Content="Info"
						  Grid.Column="2"
						  Grid.Row="3"/>
				
			</Grid>
		</Grid>

		<!--Body-->
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="6"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="6"/>
			</Grid.ColumnDefinitions>


			<!--Column 1-->
			
			<DataGrid x:Name="ArticlesDataGrid" ItemsSource="{Binding ArticleList}"
					  Grid.Column="2" AutoGenerateColumns="False" IsReadOnly="True">
				<DataGrid.Columns>
					<DataGridTextColumn Binding="{Binding Name}" Header="Article"
										MinWidth="64" MaxWidth="80"/>
					<DataGridTextColumn Binding="{Binding Type}" Header="Type"
                                        MinWidth="48" MaxWidth="64"/>
					<DataGridTextColumn Binding="{Binding Cad}" Header="CAD"
                                        MinWidth="96" MaxWidth="96"/>
					<DataGridTextColumn Binding="{Binding Customer}" Header="Customer"
                                        MinWidth="134" MaxWidth="160"/>
					<DataGridTextColumn Binding="{Binding Description}" Header="Description"
                                        MinWidth="64" Width="*"/>
					<DataGridTextColumn Binding="{Binding Material}" Header="Material"
                                        MinWidth="64" Width="*"/>
					<DataGridTextColumn Binding="{Binding Shrinkage}" Header="Shrinkage"
                                        MinWidth="32" MaxWidth="96"/>
					<DataGridTextColumn Binding="{Binding Machine}" Header="Machine"
                                        MinWidth="132" MaxWidth="132"/>
					<DataGridTemplateColumn MinWidth="48" MaxWidth="48">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Button Content="Folder" cal:Message.Attach="[Event Click]=[OpenFolder($dataContext)]"></Button>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn MinWidth="48" MaxWidth="48">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Button Content="Info" cal:Message.Attach="[Event Click]=[OpenInfo($dataContext)]"></Button>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn MinWidth="26" MaxWidth="26">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Button Content="X" cal:Message.Attach="[Event Click]=[RemoveFromQueue($dataContext)]"></Button>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>

				</DataGrid.Columns>

			</DataGrid>

			<!--Column 2-->

			<!--Column 3-->
		</Grid>

		<!--Footer-->
		<Grid Grid.Row="3" Grid.ColumnSpan="4">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="6"/>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="6"/>
			</Grid.ColumnDefinitions>

		</Grid>
	</Grid>
</Window>
